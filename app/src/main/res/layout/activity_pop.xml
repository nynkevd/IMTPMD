<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/border" android:elevation="2dp">

    <TextView
        android:id="@+id/textView"
        style="@android:style/Widget.DeviceDefault.TextView"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="36dp"
        android:text="Naam Medicijn"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif-smallcaps"
        app:textAllCaps="false" />

    <TextView
        android:id="@+id/textView6"
        style="@android:style/Widget.DeviceDefault.TextView"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medNameTV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="35dp"
        android:text="Gebruik"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif-smallcaps"
        app:textAllCaps="false" />

    <TextView
        android:id="@+id/medNameTV"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="2dp"
        android:text="Medicijn"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/medUseTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="1dp"
        android:text="Medicijn"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/medSortTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medUseTV"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:text="Medicijn"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeTV"
        android:layout_alignStart="@+id/medSortTV"
        android:layout_alignEnd="@+id/medSortTV"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:text="Datum"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif-smallcaps"
        app:textAllCaps="false" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medSortTV"
        android:layout_alignStart="@+id/medSortTV"
        android:layout_alignEnd="@+id/medSortTV"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="0dp"
        android:text="Tijd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif-smallcaps"
        app:textAllCaps="false" />

    <Button
        android:id="@+id/timeBTN"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-22dp"
        android:layout_marginEnd="39dp"
        android:text="Kies een tijd" />

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="2dp"
        android:text="Huidige Tijd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</RelativeLayout>