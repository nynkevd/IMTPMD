<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/border" android:elevation="2dp">


    <TextView
        android:id="@+id/textView"
        style="@android:style/Widget.DeviceDefault.TextView"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="33dp"
        android:text="Naam Medicijn"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif-smallcaps"
        app:textAllCaps="false" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeTV"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="5dp"
        android:text="Datum"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif-smallcaps"
        app:textAllCaps="false" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medNameTV"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="0dp"
        android:text="Tijd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:fontFamily="sans-serif-smallcaps"
        app:textAllCaps="false" />

    <Button
        android:id="@+id/timeBTN"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="33dp"
        android:text="Kies een tijd" />

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:text="Huidige Tijd"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="21dp"
        app:fontFamily="sans-serif-medium" />

    <Button
        android:id="@+id/dateBTN"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirmBTN"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="237dp"
        android:layout_marginBottom="34dp"
        android:text=" Kies datum van" />

    <Button
        android:id="@+id/dateBTN2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirmBTN"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="34dp"
        android:text=" Kies datum tot" />

    <TextView
        android:id="@+id/dateTV2"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dateBTN2"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="26dp"
        android:layout_toEndOf="@+id/textView9"
        android:text="25 jun. 2019"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="21dp"
        app:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dateTV2"
        android:layout_alignEnd="@+id/dateTV2"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/textView9"
        android:text="25 jun. 2019"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="21dp"
        app:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dateBTN"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="28dp"
        android:text="tot" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="57dp"
        android:layout_height="20dp"
        android:layout_above="@+id/textView9"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="27dp"
        android:layout_toStartOf="@+id/dateTV"
        android:text="van" />

    <Button
        android:id="@+id/confirmBTN"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="256dp"
        android:text="bevestigen" />

    <AutoCompleteTextView
        android:id="@+id/medNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:completionThreshold="1" />

</RelativeLayout>